<Window x:Class="PL.LineAdminDelete"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="LineAdminDelete" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="fond.jpg" Opacity="0.5"/>
        </Grid.Background>
        <Label Content="Which line do you want to delete? " 
                   HorizontalAlignment="Left"  
                   Margin="69,48,0,0" 
                   VerticalAlignment="Top" 
                   FontFamily="Segoe UI Black" 
                   FontSize="30" 
                   Width="513" 
                   BorderBrush="#FF2DD1C9" 
                   Foreground="Blue"    />
        <ComboBox x:Name="cbLinesToDelete" 
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch" 
                      Margin="271,176,326,204" 
                      ItemsSource="{Binding}" 
                      DisplayMemberPath ="Code" 
                      Foreground="Blue" 
                      FontSize="10" SelectionChanged="cbLinesToDelete_SelectionChanged"  />
    </Grid>
</Window>
